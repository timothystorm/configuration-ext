<document xmlns="http://maven.apache.org/changes/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
    <properties>
        <title>Change history of Configuration EXT</title>
        <author email="timothystorm@gmail.com">Timothy Storm</author>
    </properties>
    <body>
        <release version="1.1.0" date="2016-03-11">
            <action dev="timothystorm" type="update">
                Refactored the matching of hosts into a new implementation of
                resolvers that can match host(s) and environments.
            </action>
            <action dev="timothystorm" type="add">
                Added a new resolver that can determine the runtime environment
                by reading a setup file
            </action>
        </release>
        <release version="1.0.0" date="2016-01-17">
            <action dev="timothystorm" type="update">
                Strategized the parsing and
                writing of configurations sources.
            </action>
            <action dev="timothystorm" type="add">
                Added additional host matching
                using regex patterns
            </action>
            <action dev="timothystorm" type="fix">
                Fixed unit tests to comply to
                the improvement changes made
            </action>
            <action dev="timothystorm" type="update">
                Removed unused classes
            </action>
            <action dev="timothystorm" type="update">
                Added ability to handle global (*) environment properties
            </action>
            <action dev="timothystorm" type="add">
                Added ConfigurationFactory to allow for Spring dependency
                injection
            </action>
        </release>
        <release version="0.0.0" date="2015-12-22" description="Initial release">
            <action dev="timothystorm" type="add">
                Created initial release
            </action>
        </release>
    </body>
</document>